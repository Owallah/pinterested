<p style="color: green"><%= notice %></p>

<%= render @pin %>

<div>
  <% if @pin.user == current_user %>
    <%= link_to "Edit this pin", edit_pin_path(@pin) %> |
    <%= button_to "Destroy this pin", @pin, method: :delete, data: {confirm: 'Are you sure?'} %>
  <% end %>
  <%= link_to "Back to pins", pins_path %>

 
</div>
